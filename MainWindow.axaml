<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvaloniaMouseHeatMap.MainWindow"
        Title="AvaloniaMouseHeatMap"
        Width="400" Height="450">
    <DockPanel>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="5">
            <TextBlock TextAlignment="Center" TextWrapping="Wrap">Use the UI a little bit and then, press F3 to toggle the heat map.</TextBlock>
            <Button HorizontalAlignment="Center" Content="Button 1 - Click me!" />
            <Button HorizontalAlignment="Center" Content="Button 2 - Click me!" />
            <Button HorizontalAlignment="Center" Content="Button 3 - Click me!" />
            <Button HorizontalAlignment="Center" Content="Button 4 - Click me!" />
        </StackPanel>
    </DockPanel>
</Window>
